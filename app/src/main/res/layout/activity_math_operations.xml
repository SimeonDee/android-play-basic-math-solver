<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_math_operations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.simeon_dee.simplemathsolver.MathOperations">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSimpleInterest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="Simple Interest"
                android:textSize="24sp"
                android:onClick="buttonClickHandler"/>

            <Button
                android:id="@+id/btnAreaOfCircle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="Area of Circle"
                android:textSize="24sp"
                android:onClick="buttonClickHandler"/>

            <Button
                android:id="@+id/btnQuadratic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="Quadratic Equation"
                android:textSize="24sp"
                android:onClick="quadraticButtonClickHandler"/>

            <Button
                android:id="@+id/btnQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="Math Quiz"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnExit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="Exit"
                android:textSize="24sp"
                android:onClick="exitButtonClickHandler"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
